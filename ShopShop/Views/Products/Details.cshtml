@using System.Security.Cryptography
@using ShoeShop.Dtos.Concrete
@model ProductDto

<div class="container-sm mt-5" style="width: 100%; margin-left: 20%;">
    <div class="row">
        <div class="col-5">
            <div class="swiper mySwiper">
                <div class="swiper-wrapper" style="width: 400px; height: 600px;">
                    <div class="swiper-slide"><img src="@Model.ImageUrl" class="img-fluid" /></div>
                    <div class="swiper-slide"><img src="@Model.ImageUrl2" class="img-fluid" /></div>
                    <div class="swiper-slide"><img src="@Model.ImageUrl3" class="img-fluid"></div>
                    <div class="swiper-slide"><img src="@Model.ImageUrl4" class="img-fluid" /></div>
                </div>
                <div class="swiper-button-next font-weight-bold p-5" style="color: orangered; border-radius: 50px;"></div>
                <div class="swiper-button-prev font-weight-bold p-5" style="color: orangered; border-radius: 50px"></div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
        <div class="col-6 ml-3">
            <h3 class="font-weight-bold">@Model.BrandName</h3>
            <h3 style="color: gray ">@Model.Name</h3>Free Shipping</p>
            <h2 style="font-weight: 700; color: orangered">@(Convert.ToInt32(Model.Price * (1 - (Model.Discount / 100))) - 0.01) TL</h2>
            <br />
            <p style="color: black; font-weight: bold">Color :<span style="color: gray; font-weight: normal"> @Model.ColorName</span></p>
            <br />
            <p><i class="fa-solid fa-ruler-horizontal"></i> Size Table</p>
            <select asp-for="SizeNumber" class="form-group px-2 py-2 bg-light text-dark text-center font-weight-bold" style="border-radius: 5px" asp-items="ViewBag.Sizes"><option value="" class="text-dark" disabled selected>Select Size</option></select>
            <p class="mt-3"><i class="fa-solid fa-truck"></i> Estimated Delivery Date : <span class="font-weight-bold">@(DateTime.Today.AddDays(3).Day) @ViewBag.Month1 - @(DateTime.Today.AddDays(7).Day) @ViewBag.Month2</span></p>
            <a href="/Anasayfa/Sayfa1" class="btn font-weight-bold sepet" data-id="@Model.ID" style="background-color: green; color: white; padding: 15px 55px;">Add To Bag</a>
            <br />
            <h5 class="mt-3">Product Detail</h5>
            <hr />
            <p style="color: gray; margin-top: 25px; font-weight: bold">Product Code     :<span> @Model.ID</span></p>
            <p style="color: gray; margin-top: 25px; font-weight: bold">Brand          :<span> @Model.BrandName</span></p>
            <p style="color: gray; margin-top: 25px; font-weight: bold">Category       :<span> <a asp-controller="Home" asp-action="Index" asp-route-catName="@Model.CategoryName" style="text-decoration-color: black; color: black; font-weight: bold"> @Model.CategoryName</a></span></p>
            <p style="color: gray; margin-top: 25px; font-weight: bold">Color           :<span> @Model.ColorName</span></p>
            <p style="color: gray; margin-top: 25px; font-weight: bold">Gender       :<span> @Model.GenderName</span></p>
            <p style="color: gray; margin-top: 25px; font-weight: bold">External Material   :<span> @Model.Material</span></p>
        </div>
    </div>
</div>


@section Scripts
    {
    <script>
        $(document).ready(function () {
            $('.sepet').on('click',
                function () {
                    let id = $(this).data('id');
                    $.ajax({
                        url: '/Cart/Add/' + id,
                        type: 'GET',
                        dataType: 'json',
                        success: function (data) {
                            alertify.success(data);
                        }
                    });
                });
        });

    </script>

}
