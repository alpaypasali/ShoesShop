@using ShoeShop.Dtos.Concrete
@model UserDto

@{
    ViewData["Title"] = "Details";
}


<div class="container-sm" style="width: 60%;">
    <h1 style="color: orangered;">Information</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            @if (ViewBag.State != null)
            {
                if (ViewBag.State == false)
                {
                    <div class="alert alert-danger">Wrong Password  !</div>
                }
                else
                {
                    <div class="alert alert-success">The Changes have been Implemented!</div>
                }
            }


            <form asp-action="Details">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label font-weight-bold">Full Name</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label font-weight-bold">E-mail</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label font-weight-bold">Address</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label font-weight-bold">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <hr />
                <div>
                    <h5 style="background-color: rgb(245, 245, 245); color: black; border-radius: 10px; padding: 7px 15px;">Change Password</h5>
                    <div class="form-group">
                        <label class="control-label font-weight-bold">Old Password</label>
                        <input asp-for="oldPassword" class="form-control" />
                        <span asp-validation-for="oldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label font-weight-bold">New Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success font-weight-bold px-5 py-2" />
                </div>
            </form>
        </div>
    </div>
</div>



