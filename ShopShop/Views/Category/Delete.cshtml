@using ShoeShop.Dtos.Concrete
@model CategoryDto

@{
    ViewData["Title"] = "Delete";
}


<div class="container-sm" style="width: 65%;">
    <h2 style="color: orangered; font-weight: bold;">Delete Category</h2>
    <hr />
    <h4>Do you want to delete this category?</h4>
    <div>
        <dl class="row mt-4">
            <dt class="col-sm-3">
                <p style="background-color: gray; border-radius: 5px; padding: 4px; color: white; display: inline-block;">@Html.DisplayNameFor(model => model.Name)</p>
            </dt>
            <dd class="col-sm-9">
                <p style="background-color: transparent; border-radius: 5px; padding: 4px; font-weight: bold;">@Html.DisplayFor(model => model.Name)</p>
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="submit" value="Delete" class="btn btn-danger font-weight-bold" />
            <br />
            <a asp-action="Show" class="btn btn-outline-dark mt-3 font-weight-bold">Back to list</a>
        </form>
    </div>
</div>

