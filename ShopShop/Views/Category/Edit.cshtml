@using ShoeShop.Dtos.Concrete
@model CategoryDto

@{
    ViewData["Title"] = "Edit";
}

<div class="container-sm mt-5" style="width: 50%">
    <h1 class="font-weight-bold" style="color: orangered">Edit</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label font-weight-bold">Category Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Show" class="btn btn-outline-dark">Kategorilere geri dön</a>
    </div>
</div>



