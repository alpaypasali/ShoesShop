@using ShoeShop.Entities.Concrete
@model Brand

@{
    ViewData["Title"] = "Delete";
}

<div class="container-sm mt-5" style="width: 70%">Delete Brand</h1>
    <hr />

    <h3>Are you sure you want to Delete this Brand?</h3>
    <div class="mt-5">
        <dl class="row">
            <dt class="col-sm-3">
                <p class="py-1 px-3">Brand Name <span class="ml-3"> =></span></p>
            </dt>
            <dd class="col-sm-2">
                <p class="text-light bg-secondary py-1 px-3 font-weight-bold" style="border-radius: 6px; display: inline-block">@Html.DisplayFor(model => model.Name)</p>
            </dd>
        </dl>
        <form class="ml-5" asp-action="Delete">
            <input type="submit" value="Delete" class="btn btn-danger font-weight-bold" /> |
            <a class="btn btn-outline-dark" asp-action="Show">Back to list</a>
        </form>
    </div>

</div>
